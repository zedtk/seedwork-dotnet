{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/core/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pwsh -File tools/build.ps1 -ProjectPath packages/core/src/Seedwork.Core.csproj -Configuration Release",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "production": {
          "command": "pwsh -File tools/build.ps1 -ProjectPath packages/core/src/Seedwork.Core.csproj -Configuration Release"
        },
        "development": {
          "command": "pwsh -File tools/build.ps1 -ProjectPath packages/core/src/Seedwork.Core.csproj -Configuration Debug"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pwsh -File tools/test.ps1 -ProjectPath packages/core/test/Seedwork.Core.Tests.csproj",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build"]
    },
    "pack": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pwsh -File tools/pack.ps1 -ProjectPath packages/core/src/Seedwork.Core.csproj -OutputPath dist/packages",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build", "test"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pwsh -File tools/publish.ps1 -PackagePath dist/packages",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["pack"]
    }
  },
  "tags": ["type:library", "scope:core"]
}
